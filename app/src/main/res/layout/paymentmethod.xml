<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary_color">

    <!-- Scrollable content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/bottom_navigation"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Logo at top -->


            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="66dp"
                android:layout_height="46dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="26dp"
                android:contentDescription="@string/logo"
                android:src="@drawable/florio_logo_img"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <!-- Top right icons (Settings, Bell, Heart) -->
            <LinearLayout
                android:id="@+id/top_icons"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="26dp"
                android:layout_marginEnd="16dp"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginEnd="8dp"
                    android:contentDescription="@string/settings"
                    android:src="@drawable/settings" />

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginEnd="8dp"
                    android:contentDescription="@string/notifications"
                    android:src="@drawable/bell" />

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:contentDescription="@string/favorites"
                    android:src="@drawable/heart" />
            </LinearLayout>


            <!-- Flower bouquet collections title -->
            <TextView
                android:id="@+id/collections_title"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:fontFamily="@font/katibeh"
                android:text="@string/payment_methodd"
                android:textColor="#000000"
                android:textSize="25sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView2" />
            <!--            android:layout_row="0"-->
            <!--            android:layout_column="1"-->
            <!--            android:layout_marginEnd="77dp"-->
            <!--            app:layout_constraintBottom_toTopOf="@+id/imageView2"-->
            <!--            app:layout_constraintEnd_toStartOf="@+id/top_icons"-->
            <!-- Card Image -->
            <ImageView
                android:id="@+id/card_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:contentDescription="@string/visa_card"
                android:padding="16dp"
                android:src="@drawable/atm_1"
                app:layout_constraintTop_toBottomOf="@+id/collections_title" />

            <!-- Choose Method Title -->
            <TextView
                android:id="@+id/choose_method_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/choose_method"
                android:textSize="16sp"
                android:padding="16dp"
                app:layout_constraintTop_toBottomOf="@+id/card_image"
                app:layout_constraintStart_toStartOf="parent" />

            <!-- Payment Method Options -->
            <LinearLayout
                android:id="@+id/payment_options"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                app:layout_constraintTop_toBottomOf="@+id/choose_method_text"
                app:layout_constraintStart_toStartOf="parent">

                <RadioGroup
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/cash"
                        android:textSize="14sp" />

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/visa"
                        android:textSize="14sp"
                        android:checked="true" />

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/paypal"
                        android:textSize="14sp" />
                </RadioGroup>
            </LinearLayout>

            <!-- Cardholder Name Label -->
            <TextView
                android:id="@+id/cardholder_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/cardholder_name"
                android:textSize="14sp"
                android:padding="16dp"
                app:layout_constraintTop_toBottomOf="@+id/payment_options"
                app:layout_constraintStart_toStartOf="parent" />

            <!-- Cardholder Name Input -->
            <EditText
                android:id="@+id/cardholder_input"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="@string/enter_cardholder_name"
                android:inputType="text"
                android:padding="8dp"
                android:layout_marginHorizontal="16dp"
                android:minHeight="48dp"
                app:layout_constraintTop_toBottomOf="@+id/cardholder_label"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <!-- CVV Label -->
            <TextView
                android:id="@+id/cvv_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/cvv"
                android:textSize="14sp"
                android:padding="16dp"
                app:layout_constraintTop_toBottomOf="@+id/cardholder_input"
                app:layout_constraintStart_toStartOf="parent" />

            <!-- CVV Input -->
            <EditText
                android:id="@+id/cvv_input"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="@string/enter_cvv"
                android:inputType="number"
                android:padding="8dp"
                android:layout_marginHorizontal="16dp"
                android:minHeight="48dp"
                app:layout_constraintTop_toBottomOf="@+id/cvv_label"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <!-- Card Number Label -->
            <TextView
                android:id="@+id/card_number_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/card_number"
                android:textSize="14sp"
                android:padding="16dp"
                app:layout_constraintTop_toBottomOf="@+id/cvv_input"
                app:layout_constraintStart_toStartOf="parent" />

            <!-- Card Number Input -->
            <EditText
                android:id="@+id/card_number_input"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="@string/enter_card_number"
                android:inputType="number"
                android:padding="8dp"
                android:layout_marginHorizontal="16dp"
                android:minHeight="48dp"
                app:layout_constraintTop_toBottomOf="@+id/card_number_label"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <!-- Expire Date Label -->
            <TextView
                android:id="@+id/expire_date_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/expire_date"
                android:textSize="14sp"
                android:padding="16dp"
                app:layout_constraintTop_toBottomOf="@+id/card_number_input"
                app:layout_constraintStart_toStartOf="parent" />

            <!-- Expire Date Input -->
            <EditText
                android:id="@+id/expire_date_input"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="@string/enter_expire_date"
                android:inputType="date"
                android:padding="8dp"
                android:layout_marginHorizontal="16dp"
                android:minHeight="48dp"
                app:layout_constraintTop_toBottomOf="@+id/expire_date_label"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />





            <Button
                android:id="@+id/next_button"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:layout_marginStart="315dp"
                android:backgroundTint="@color/accent_color"
                android:padding="8dp"
                android:text="@string/save_payment"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/expire_date_input" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <!-- Fixed bottom navigation bar -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/primary_color"
        app:itemIconTint="@android:color/black"
        app:itemTextColor="@android:color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:menu="@menu/bottom_navigation_menu"
        tools:layout_editor_absoluteX="-70dp">

    </com.google.android.material.bottomnavigation.BottomNavigationView>

</androidx.constraintlayout.widget.ConstraintLayout>